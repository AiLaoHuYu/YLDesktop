<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/desktop_bg"
    tools:context=".activity.MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dimens20"
        app:cardCornerRadius="@dimen/dimens10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.56">

        <com.amap.api.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/map_view_bg" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/empty_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:cardCornerRadius="@dimen/dimens10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.56" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.40">

        <LinearLayout
            android:id="@+id/weather_ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimens20"
            android:layout_marginEnd="@dimen/dimens40"
            android:background="@drawable/weather_ll_bg"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.14"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/no_weather_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="暂无天气信息"
                android:textColor="@color/white"
                android:textSize="@dimen/text28sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/weather_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimens10"
                android:src="@drawable/weather"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/weather_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/weather_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimens10"
                    android:layout_marginTop="@dimen/dimens10"
                    android:text="23°"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/weather_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/weather_temperature"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dimens10"
                    android:layout_marginTop="@dimen/dimens10"
                    android:text="西北风"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/today_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/dimens10"
                    android:text="05/11"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/weather_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/dimens10"
                    android:text="中雨"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/weather_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/dimens10"
                    android:layout_toStartOf="@+id/weather_text"
                    android:text="宝安区"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/music_ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimens10"
            android:layout_marginEnd="@dimen/dimens40"
            android:background="@drawable/weather_ll_bg"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.23"
            app:layout_constraintTop_toBottomOf="@+id/weather_ll">

            <TextView
                android:id="@+id/no_music_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前暂无播放器"
                android:textColor="@color/white"
                android:textSize="@dimen/text24sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/music_ll_contenet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/music_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimens5"
                    android:layout_marginTop="@dimen/dimens10"
                    android:layout_marginBottom="@dimen/dimens10"
                    android:src="@drawable/music" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimens5">

                    <TextView
                        android:id="@+id/music_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimens10"
                        android:text="火火的情郎（DJ何鹏版）"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/music_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/music_title"
                        android:layout_marginStart="@dimen/dimens10"
                        android:text="东方红艳、赵真"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text16sp" />

                    <ImageView
                        android:id="@+id/music_prev"
                        android:layout_width="@dimen/dimens40"
                        android:layout_height="@dimen/dimens40"
                        android:layout_below="@id/music_author"
                        android:layout_marginTop="@dimen/dimens10"
                        android:src="@drawable/prev_music" />

                    <ImageView
                        android:id="@+id/music_play_stop"
                        android:layout_width="@dimen/dimens40"
                        android:layout_height="@dimen/dimens40"
                        android:layout_below="@id/music_author"
                        android:layout_marginStart="@dimen/dimens50"
                        android:layout_marginTop="@dimen/dimens10"
                        android:layout_toEndOf="@id/music_prev"
                        android:src="@drawable/stop" />

                    <ImageView
                        android:id="@+id/music_next"
                        android:layout_width="@dimen/dimens40"
                        android:layout_height="@dimen/dimens40"
                        android:layout_below="@id/music_author"
                        android:layout_marginStart="@dimen/dimens50"
                        android:layout_marginTop="@dimen/dimens10"
                        android:layout_toEndOf="@id/music_play_stop"
                        android:src="@drawable/next_music" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/deepseek_ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimens10"
            android:layout_marginEnd="@dimen/dimens40"
            android:background="@drawable/weather_ll_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.52"
            app:layout_constraintTop_toBottomOf="@+id/music_ll">

            <LinearLayout
                android:id="@+id/deepseek_ll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/deepseek_img"
                        android:layout_width="@dimen/dimens50"
                        android:layout_height="@dimen/dimens50"
                        android:layout_marginStart="@dimen/dimens10"
                        android:src="@drawable/wdxz" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dimens10"
                            android:text="@string/deepseek_welcome"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dimens10"
                            android:gravity="center_horizontal"
                            android:text="@string/deepseek_fuction"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text14sp" />

                    </LinearLayout>


                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/deepseek_recy"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/dimens10"
                    android:layout_weight="0.5"
                    android:overScrollMode="never" />

                <android.widget.Button
                    android:id="@+id/deepseek_btn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dimens10"
                    android:layout_marginEnd="@dimen/dimens10"
                    android:layout_marginBottom="@dimen/dimens10"
                    android:layout_weight="0.15"
                    android:background="@drawable/deepseek_edittext_bg"
                    android:hint="给小天发送消息"
                    android:textColor="@color/ivory"
                    android:textSize="@dimen/text8sp" />

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>