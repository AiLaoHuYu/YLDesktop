<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/desktop_bg"
    tools:context=".activity.AllAppActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimens20"
        android:layout_marginTop="@dimen/dimens10"
        android:layout_marginEnd="@dimen/dimens20"
        android:layout_marginBottom="@dimen/dimens10"
        android:background="@drawable/all_app_bg">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/all_app_recy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>